{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {
          "p": 0.1,
          "sample_rate": 16000
        }
      },
      {
        "type": "ColoredNoise",
        "args": {
          "p": 0.1,
          "sample_rate": 16000
        }
      },
      {
        "type": "Speedup",
        "args": {
          "speedup_min": 0.8,
          "speedup_max": 1.2
        }
      }
    ],
    "spectrogram": [
      {
        "type": "FreqMask",
        "args": {
          "freq_mask_param": 80
        }
      },
      {
        "type": "TimeMask",
        "args": {
          "time_mask_param": 40,
          "p": 0.1
        }
      }
    ]
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "hidden_dim": 512,
      "n_rnn": 4
    }
  },
  "data": {
    "train": {
      "batch_size": 60,
      "num_workers": 32,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 300
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "val": {
      "batch_size": 60,
      "num_workers": 32,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "test-clean": {
      "batch_size": 60,
      "num_workers": 32,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "test-other": {
      "batch_size": 60,
      "num_workers": 32,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          },
          "module": "hw_asr.datasets"
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-4,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam search)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam search)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 200,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "beam_size": 30,
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 600,
    "visualize": "wandb",
    "wandb_project": "dla-1-asr",
    "len_epoch": 200,
    "grad_norm_clip": 10
  }
}
