{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {
        }
      },
      {
        "type": "GaussianNoise",
        "args": {
          "variance": 0.005
        }
      },
      {
        "type": "Speedup",
        "args": {
          "speedup_min": 0.8,
          "speedup_max": 1.2
        }
      }
    ],
    "spectrogram": [
      {
        "type": "FreqMask",
        "args": {
          "freq_mask_param": 30
        }
      },
      {
        "type": "TimeMask",
        "args": {
          "time_mask_param": 30
        }
      }
    ]
  },
  "arch": {
    "type": "Conformer",
    "args": {
      "input_dim": 128,
      "num_heads": 4,
      "ffn_dim": 256,
      "num_layers": 16,
      "kernel_size": 31,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 100,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train_all",
            "max_audio_length": 20.0,
            "max_text_length": 300
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "val": {
      "batch_size": 100,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "test-clean": {
      "batch_size": 100,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "test-other": {
      "batch_size": 100,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          },
          "module": "hw_asr.datasets"
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 200,
      "epochs": 20,
      "anneal_strategy": "cos",
      "max_lr": 3e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "beam_size": 30,
    "epochs": 20,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 400,
    "visualize": "wandb",
    "wandb_project": "dla-1-asr",
    "len_epoch": 200,
    "grad_norm_clip": 10
  }
}
